<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:NavigationBarControls.Controls">
    <!-- Add Resources Here -->
  <Design.PreviewWith>
    <Border>
      <StackPanel Spacing="20">
        <controls:BottomNavigationBar>

        </controls:BottomNavigationBar>
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type controls:BottomNavigationBar}" TargetType="controls:BottomNavigationBar">
    <Setter Property="Template">
      <ControlTemplate>
        <Border>
          <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}"/>
        </Border>
      </ControlTemplate>
    </Setter>
    <Setter Property="ItemsPanel">
      <ItemsPanelTemplate>
        <StackPanel Orientation="Horizontal" Spacing="0"></StackPanel>
      </ItemsPanelTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
